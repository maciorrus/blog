{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}



<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon
    -->
    <div class="fadeIn first">
      <h3 style="text-align: center">Logowanie</h3>
    </div>

    <!-- Login Form -->

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

      <input type="text"      id="login"    name="_username" class="fadeIn second"  value="{{ last_username }}" required="required" placeholder="Nazwa użytkownika" autocomplete="username" />
      <input type="password"  id="password" name="_password" class="fadeIn third"   value="{{ last_username }}" required="required" placeholder="Hasło"/>

      <input type="submit" class="fadeIn fourth" value="Zaloguj"/>
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="resetting/request">Odzyskiwanie hasła</a>
    </div>

  </div>
</div>

</form>



{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %}
